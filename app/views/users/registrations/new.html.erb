<div class="box">
  <h2 class="title"><%= t("common.register", default: "Sign up") %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= render "shared/error_messages", :target => resource  %>

  <div class="form-inputs">
    <%= f.input :name, :required => true, autofocus: true %>
    <%= f.input :email, :required => true, :autofocus => true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    
    <% if resource.login_type == 'password' %>
      <%= f.input :password, :autocomplete => "off", :required => true, :hint => t("devise.registrations.password_hint"), :required => false %>
      <%= f.input :password_confirmation, :required => true %>
    <% end %>
    <%= f.input :avatar %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t("common.register", default: "Sign up") %>
  </div>
<% end %>
</div>


<%= render "devise/shared/links" %>